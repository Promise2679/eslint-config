{
  "name": "@promise2/eslint-config",
  "type": "module",
  "version": "0.2.0",
  "license": "ISC",
  "author": "Promise2679",
  "packageManager": "pnpm@10.28.2",
  "description": "Eslint config used by Promise2679",
  "scripts": {
    "build": "tsdown",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "typegen": "jiti scripts/typegen.ts",
    "postinstall": "npx simple-git-hooks"
  },
  "lint-staged": {
    "*.ts": "eslint"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.mts"
    }
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Promise2679/eslint-config.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpx lint-staged"
  },
  "dependencies": {
    "@antfu/install-pkg": "catalog:helper",
    "@clack/prompts": "catalog:helper",
    "@eslint/js": "catalog:required",
    "eslint-plugin-import": "catalog:required",
    "eslint-plugin-perfectionist": "catalog:required",
    "eslint-plugin-sonarjs": "catalog:required",
    "eslint-plugin-unicorn": "catalog:required",
    "globals": "catalog:helper",
    "local-pkg": "catalog:helper"
  },
  "devDependencies": {
    "@types/node": "catalog:typing",
    "@typescript-eslint/eslint-plugin": "catalog:optional",
    "@typescript-eslint/parser": "catalog:optional",
    "eslint": "catalog:binary",
    "eslint-config-prettier": "catalog:optional",
    "eslint-plugin-format": "catalog:optional",
    "eslint-plugin-prettier": "catalog:optional",
    "eslint-plugin-vue": "catalog:optional",
    "eslint-typegen": "catalog:dev",
    "jiti": "catalog:infra",
    "prettier": "catalog:optional",
    "simple-git-hooks": "catalog:infra",
    "tsdown": "catalog:infra",
    "typescript": "catalog:infra",
    "vue-eslint-parser": "catalog:optional"
  },
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": "catalog:optional",
    "@typescript-eslint/parser": "catalog:optional",
    "eslint": "catalog:binary",
    "eslint-config-prettier": "catalog:optional",
    "eslint-plugin-format": "catalog:optional",
    "eslint-plugin-prettier": "catalog:optional",
    "eslint-plugin-vue": "catalog:optional",
    "vue-eslint-parser": "catalog:optional",
    "prettier": "catalog:optional"
  },
  "peerDependenciesMeta": {
    "@typescript-eslint/eslint-plugin": {
      "optional": true
    },
    "@typescript-eslint/parser": {
      "optional": true
    },
    "eslint-config-prettier": {
      "optional": true
    },
    "eslint-plugin-format": {
      "optional": true
    },
    "eslint-plugin-prettier": {
      "optional": true
    },
    "eslint-plugin-vue": {
      "optional": true
    },
    "vue-eslint-parser": {
      "optional": true
    },
    "prettier": {
      "optional": true
    }
  }
}
